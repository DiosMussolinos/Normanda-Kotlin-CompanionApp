<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a38c67"

    android:layout_gravity="center"
    tools:context=".Fragments.StatsFragment">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="368dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087"
        app:srcCompat="@drawable/logo_phase_plus_background" />

    <Button
        android:id="@+id/to_challenge"
        android:layout_width="278dp"
        android:layout_height="66dp"
        android:layout_marginTop="109dp"
        android:layout_marginBottom="136dp"
        android:fontFamily="@font/roman_sd"
        android:text="Set a Challenge"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnAmount"
        app:layout_constraintVertical_bias="0.855" />

    <TextView
        android:id="@+id/EnAmount"
        android:layout_width="365dp"
        android:layout_height="126dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="284dp"
        android:fontFamily="@font/roman_sd"
        android:gravity="center_horizontal"


        android:text="You must kill X Enemies"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>